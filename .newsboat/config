# General
browser "firefox %u"

# Unbind keys
unbind-key ENTER
unbind-key HOME
unbind-key END
unbind-key j
unbind-key k
unbind-key J
unbind-key K
unbind-key g
unbind-key ^U
unbind-key n
unbind-key p

# Bind keys - vim
bind-key gg home
bind-key G end
bind-key j down
bind-key k up
bind-key l open
bind-key h quit
bind-key ^U pageup
bind-key ^D pagedown
bind-key n next
bind-key p prev

# Formatting
feedlist-format "%4i %-11u %t _%T_"
articlelist-format "%4i %D  %?T?%-20T  ?%t"
# TODO - titles

highlight article "^(Feed|Title|Author|Link|Links|Date):" default default bold 
highlight all "https?://[^ ]+" color39 default underline
highlight all "_.+_" color36
highlight feedlist "^...." yellow default bold
highlight feedlist "\\([0-9]+/[0-9]+\\)" cyan default bold
highlight articlelist "(Jan|Feb|Mar|Apr|May|Jun|Jul|Aug|Sep|Oct|Nov|Dec) [0-9][0-9]" cyan default bold
highlight articlelist "^...." yellow default bold
color listfocus color36 default
color listfocus_unread color36 default bold
