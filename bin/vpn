#!/bin/sh

# A wrapper for openvpn3. Because the openvpn3 interface sucks.

start()
{
    openvpn3 session-start --config "$1"
}

stop()
{
    active_sessions=$(openvpn3 sessions-list | grep -i 'path' | awk '{p=index($0, ":");print $2}')

    echo "$active_sessions"

    for instance in $active_sessions; do
        openvpn3 session-manage --disconnect --session-path "${instance}"
    done 
}

status()
{
    openvpn3 sessions-list
}

usage()
{
	printf "vpn [OPTIONS]

--help                  show help
start <file>.ovpn       start a session
stop                    stop all sessions
status                  show session status\n"
}

case "$1" in
	start	) start "$2" ;;
	stop	) stop ;;
	status	) status ;;
	--help	) usage ;;
	*		) usage ;;
esac
