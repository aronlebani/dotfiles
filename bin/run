#!/bin/sh

cachedir="${XDG_CACHE_HOME:-"$HOME/.cache"}"
cache="$cachedir/run"

IFS=:

if [ ! -f "$cache" ]; then
	stest -flx "$PATH" | sort -u > "$cache"
fi

out=$(cat "$cache")

exe=$( \
	echo "$out" | fzf \
		--height=10 \
		--no-unicode \
		--no-scrollbar \
		--pointer=' ' \
		--color='gutter:-1' \
)

exec $exe 2>/dev/null 1>/dev/null &
