# i3status configuration file.
# see "man i3status" for documentation.

general {
    colors = false
    interval = 5
	separator = " "
}

order += "battery all"
order += "volume master"
order += "wireless _first_"
order += "tztime local"

wireless _first_ {
    format_up = "🌏 %essid"
    format_down = "Not connected"
}

battery all {
    format = "%status %percentage %remaining"
	format_down = "no battery"
    status_chr = "⚡"
    status_bat = "🔋"
    status_full = "🔋"
	low_threshold = 10
}

volume master {
	format = "🔊 %volume"
    format_muted = "🔈 %volume"
	device = "default"
}

tztime local {
    format = "%d/%m/%Y %H:%M"
}
