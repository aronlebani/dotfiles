# i3status configuration file.
# see "man i3status" for documentation.

general {
    colors = false
    interval = 5
}

order += "battery all"
order += "volume master"
order += "wireless _first_"
order += "tztime local"

wireless _first_ {
    format_up = "net:%quality"
    format_down = "down"
}

battery all {
    format = "%status %percentage %remaining"
	format_down = "no battery"
    status_chr = "chg:"
    status_bat = "bat:"
    status_full = "bat:"
	low_threshold = 10
}

volume master {
	format = "vol: %volume"
    format_muted = "vol: mute %volume"
	device = "default"
}

tztime local {
    format = "%d/%m/%Y %H:%M"
}
